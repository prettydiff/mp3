{
    "compilerOptions": {
        "alwaysStrict": true,
        "moduleResolution": "node",
        "outDir": "./",
        "noImplicitAny": true,
        "pretty": true,
        "strictFunctionTypes": true,
        "target": "ES2020",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "**/node_modules",
        "**/.*/"
    ],
    "include": [
        "**/*.ts"
    ]
}